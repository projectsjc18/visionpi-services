{
  "name": "monitoring-service",
  "version": "1.0.0",
  "description": "A monitoring service, microservice with nodejs",
  "author": "VisionPi <visionpi.dev@gmail.com>",
  "license": "MIT",
  "main": "app.js",
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "mock"
    ]
  },
  "scripts": {
    "test": "mocha -R spec src/**/*.spec.js",
    "start": "nodemon src/app.js",
    "lint": "standard --verbose | snazzy",
    "node-debug": "DEBUG=express* node src/app.js",
    "chrome-debug": "node --debug-brk --inspect src/app.js"
  },
  "keywords": [
    "express",
    "mongodb",
    "docker",
    "microservice"
  ],
  "devDependencies": {
    "eslint": "^4.18.2",
    "mocha": "^3.2.0",
    "nodemon": "^1.19.4",
    "should": "^11.1.2",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0",
    "supertest": "^2.0.1"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "express": "^4.14.0",
    "helmet": "^3.4.0",
    "http-status": "^0.2.5",
    "mongodb": "^3.3.0",
    "morgan": "^1.7.0"
  }
}
